{% extends "::base.html.twig" %}

{% block body %}
    <h1 class="page-header">{% block header %}Dodaj produkt{% endblock %}</h1>

    {{ form_start(form, { 'attr': { 'role': 'form' } } ) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Nazwa') }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } } ) }}
    </div>

    <div class="form-group">
        {{ form_label(form.price, 'Cena') }}
        {{ form_errors(form.price) }}
        {{ form_widget(form.price, { 'attr': { 'class': 'form-control' } } ) }}
    </div>

    <div class="form-group">
        {{ form_label(form.amount, 'Aktualny stan') }}
        {{ form_errors(form.amount) }}
        {{ form_widget(form.amount, { 'attr': { 'class': 'form-control' } } ) }}
    </div>

    <div class="form-group">
        {{ form_label(form.file, 'ZdjÄ™cie') }}
        {{ form_errors(form.file) }}
        {{ form_widget(form.file) }}
    </div>

    {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary' } } ) }}

    {{ form_end(form) }}
{% endblock %}
